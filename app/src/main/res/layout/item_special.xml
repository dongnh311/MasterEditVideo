<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height_120dp"
            android:padding="@dimen/common_padding_8dp"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/main_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/select_view"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/state_button_corner"
                    android:visibility="gone" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/filter_thumbnail"
                    android:layout_width="@dimen/image_height_55dp"
                    android:layout_height="@dimen/image_height_55dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/filter_name"
                android:layout_width="@dimen/image_height_80dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="visible"
                android:gravity="center"
                android:textSize="@dimen/common_size_text_12sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</layout>
