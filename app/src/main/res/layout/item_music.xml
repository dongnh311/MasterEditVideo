<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/main_view_music"
        android:layout_width="match_parent"
        android:padding="@dimen/common_margin_8dp"
        android:orientation="vertical"
        tools:background="@color/colorBgApp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/view_icon"
                android:layout_width="@dimen/image_height_65dp"
                android:layout_height="@dimen/image_height_65dp"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="@dimen/common_app_width_stroke_1dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/imageCircleLargeTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/view_play"
                app:layout_constraintStart_toEndOf="@id/view_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/view_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/view_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/common_padding_8dp"
                        android:paddingEnd="0dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/common_size_text_14sp"
                        tools:text="My song is name Music" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/view_dot"
                            android:layout_marginStart="@dimen/common_margin_8dp"
                            android:layout_marginEnd="@dimen/common_margin_8dp"
                            android:layout_marginTop="@dimen/common_margin_2dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_music_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/view_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/common_padding_8dp"
                            android:paddingEnd="0dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/common_size_text_10sp"
                            tools:text="Author" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/view_play"
                android:layout_width="@dimen/image_height_35dp"
                android:layout_height="@dimen/image_height_35dp"
                android:background="@drawable/state_button_corner"
                android:src="@drawable/ic_play_music"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view_download"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/view_download"
                android:layout_width="@dimen/image_height_35dp"
                android:layout_height="@dimen/image_height_35dp"
                android:background="@drawable/state_button_corner"
                android:src="@drawable/ic_download"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:id="@+id/progress_music"
            android:max="100"
            android:progress="0"
            android:scaleY="0.5"
            android:minHeight="@dimen/image_height_5dp"
            android:progressDrawable="@drawable/bg_progress_gradient"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>
