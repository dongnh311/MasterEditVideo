<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".view.main.MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/guide_line_right"
            app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
            android:layout_height="0dp">

            <FrameLayout
                android:id="@+id/view_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <TextView
            android:id="@+id/view_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_view_duration"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/common_duration_default"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/common_size_text_10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/guide_line_right"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_line_right"
            android:layout_width="@dimen/view_height_1dp"
            app:layout_constraintStart_toStartOf="@id/guide_line_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
            android:background="@color/colorWhite"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="@dimen/image_height_65dp"
            android:layout_height="@dimen/image_height_65dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_play"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guide_line_right"
            app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="@dimen/image_height_45dp"
            android:layout_height="@dimen/image_height_45dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_play"
            app:layout_constraintBottom_toBottomOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_export"
            android:layout_width="@dimen/image_height_45dp"
            android:layout_height="@dimen/image_height_45dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_export"
            app:layout_constraintStart_toStartOf="@id/btn_play"
            app:layout_constraintEnd_toEndOf="@+id/btn_play"
            app:layout_constraintBottom_toTopOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/image_height_45dp"
            android:layout_height="@dimen/image_height_45dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_delete"
            app:layout_constraintStart_toEndOf="@+id/guide_line_right"
            app:layout_constraintEnd_toStartOf="@id/btn_play"
            app:layout_constraintBottom_toBottomOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_image"
            android:layout_width="@dimen/image_height_45dp"
            android:layout_height="@dimen/image_height_45dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_image"
            app:layout_constraintStart_toEndOf="@+id/guide_line_right"
            app:layout_constraintEnd_toStartOf="@id/btn_play"
            app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
            app:layout_constraintTop_toTopOf="@id/btn_play" />

        <ImageButton
            android:id="@+id/btn_video"
            android:layout_width="@dimen/image_height_45dp"
            android:layout_height="@dimen/image_height_45dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_video"
            app:layout_constraintStart_toStartOf="@+id/btn_play"
            app:layout_constraintEnd_toEndOf="@id/btn_play"
            app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
            app:layout_constraintTop_toBottomOf="@id/btn_play" />

        <ImageButton
            android:id="@+id/btn_music"
            android:layout_width="@dimen/image_height_45dp"
            android:layout_height="@dimen/image_height_45dp"
            android:background="@drawable/state_button_corner"
            android:src="@drawable/ic_music"
            app:layout_constraintStart_toEndOf="@+id/btn_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
            app:layout_constraintTop_toTopOf="@id/btn_play" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_line_bottom"
            android:background="@color/colorWhite"
            android:layout_height="@dimen/view_height_1dp" />

        <View
            android:id="@+id/center_line"
            android:layout_width="@dimen/view_height_1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guide_line_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorRed"
            android:elevation="@dimen/image_height_100dp"
            android:layout_height="0dp" />

        <FrameLayout
            android:id="@+id/main_replace_view"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guide_line_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">

            <com.dongnh.mastereditvideo.utils.control.TimeLineTrack
                android:id="@+id/view_time_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
