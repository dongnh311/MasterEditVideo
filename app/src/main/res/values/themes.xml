<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasterEditVideo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Bottom sheet style -->
    <style name="customBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/customBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:textSize">@dimen/common_size_text_14sp</item>
    </style>

    <style name="customBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- conner image -->
    <style name="imageCircleLargeTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>

    <!-- style of dialog -->
    <style name="customDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/common_bg_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
        <item name="android:textSize">@dimen/common_size_text_14sp</item>
    </style>

    <!-- style of tab layout -->
    <style name="tabLayoutTextStyleHome">
        <item name="android:textSize">@dimen/common_size_text_10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontWeight">400</item>
        <item name="maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>